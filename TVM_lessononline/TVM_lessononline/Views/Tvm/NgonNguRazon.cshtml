
@{
    ViewBag.Title = "NgonNguRazon";
}

<h2>Ngôn Ngữ Razon</h2>
<h3>Biến</h3>
@{ 
    var name = "Trần Văn Minh";
    int age = 20;
    DateTime dt = DateTime.Now;
}
<p>Họ tên:@name</p>
<p>Tuổi: @age</p>
<p>Time: @dt</p>
</hr>
<h3> Câu lệch if</h3>
@{ 
    if (age > 18)
            {
                <p>Tuổi @age =>trung niên rồi</p>
            }
    else 
            {
                <p>còn trẻ</p>
            }
}
</hr>
<h3> Loop: for, while, do...while, foreach....</h3>
@{ 
    int num = 10;
}
@for (int i = 0; i<num;i++)
{ 
    <li>@i => @i*@i</li>
}
<h3>Mảng</h3>
@{ 
    string[] names = { "Trần Văn A", "Nguyễn Thị M", "Lê Đại C", "Trịnh Văn C" };

}
@foreach(var item  in ViewBag.names)
{
  <p>@item</p>  
}

